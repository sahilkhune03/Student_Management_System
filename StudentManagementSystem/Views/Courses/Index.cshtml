@model IEnumerable<Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Courses</h2>
        <a asp-action="Create" asp-controller="Courses" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Create Course
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Course ID</th>
                        <th scope="col">Course Name</th>
                        <th scope="col">Students</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td class="fw-bold text-secondary">@course.CourseId</td>
                            <td class="fw-semibold">@course.CourseName</td>
                            <td>
                                @if (course.Students != null && course.Students.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var student in course.Students)
                                        {
                                            <li>
                                                <i class="bi bi-person-circle text-primary me-2"></i>
                                                @student.Name
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No students enrolled</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .table th {
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #eef5ff;
        transition: 0.3s ease;
    }
</style>
